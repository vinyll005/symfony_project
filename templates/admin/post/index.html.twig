{% extends 'admin/adminbase.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                <h1 class="display-4 text-center">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-8">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>{{ message }}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                <table class="table">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <th scope="row">{{ post.id }}</th>
                            <td><img src="{{ asset('uploads/postImage/') }}{{ post.image }}" style="width: 150px;"></td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.content }}</td>
                            <td>
                                <button onclick="location.href='{{ path('admin_post_update', {'id': post.id}) }}'" type="button"
                                        class="btn btn-secondary">
                                    Update
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center mt-5">
            {% if categories is not empty %}
                <div class="col-12 col-lg-6 col-md-6">
                    <a href="{{ path('admin_post_create') }}" class="display-4 text-center btn btn-success">Create post</a>
                </div>
            {% else %}
                <div class="col-12 col-lg-6 col-md-6">
                    <a href="{{ path('admin_post') }}" class="display-4 text-center btn btn-danger">Create post first</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
